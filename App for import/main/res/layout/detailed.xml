<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55ab46"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sagi.datapass.DetailedActivity">

    <TextView
        android:id="@+id/detailedName"
        android:layout_alignParentTop="true"
        android:background="#55ab46"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:padding="30dp"
        android:text="Detailed Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:layout_centerInParent="true"
        android:padding="40dp"
        android:drawSelectorOnTop="true"
        android:id="@+id/detailedSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/actions"
        android:background="#0f7977">
    </Spinner>

    <LinearLayout
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="SecondActivity"
            android:id="@+id/returnToSecond"
            android:background="#F49129"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="30dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button
            android:layout_weight="1"
            android:text="Set Selection"
            android:background="#92184f"
            android:textColor="#FFFFFF"
            android:id="@+id/setSelection"
            android:textSize="20sp"
            android:padding="30dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>



</RelativeLayout>
